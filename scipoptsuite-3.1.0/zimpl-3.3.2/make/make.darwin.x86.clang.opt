CC              =       clang
CPPFLAGS	+=	-DNDEBUG -DNO_MSHELL -D__NO_MATH_INLINES 
CFLAGS		=	-O3
LDFLAGS		=	-lgmp -lm 

ifeq ($(LINK),shared)
LIBRARY		=	$(LIBDIR)/lib$(LIBNAME).so
LIBLINK		=	$(LIBDIR)/lib$(NAME).$(BASE).so
CFLAGS		+=	-fPIC
AR		=	clang -m32 -shared -o # the trailing space is important
ARFLAGS		=       $(LDFLAGS)
RANLIB		=	true
endif

ifeq ($(LINK),static)
LDFLAGS		=	-static -lgmp -lm
endif

ifeq ($(ZLIB),true)
LDFLAGS		+=	-lz
endif
