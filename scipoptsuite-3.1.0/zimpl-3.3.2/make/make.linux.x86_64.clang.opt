CC              =       clang
CPPFLAGS	+=	-DNDEBUG -DNO_MSHELL -D__NO_MATH_INLINES 
CFLAGS		=	-O3 -m64 -mtune=native
LDFLAGS		=	-lgmp -lm

ifeq ($(ZLIB),true)
LDFLAGS		+=	-lz
endif

ifeq ($(LINK),shared)
LIBRARY		=	$(LIBDIR)/lib$(LIBNAME).so
LIBLINK		=	$(LIBDIR)/lib$(NAME).$(BASE).so
CFLAGS		+=	-fPIC
AR		=	clang -m64 -shared -o # the trailing space is important
ARFLAGS		=       $(LDFLAGS)
RANLIB		=	true
endif

ifeq ($(LINK),static)
LDFLAGS		+=	-static
endif
